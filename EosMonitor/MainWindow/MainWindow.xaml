                        <Rectangle Canvas.Left="0" Canvas.Top="13"  Width="85" Height="14" Fill="Transparent" 
                            MouseLeftButtonUp="DriveModeDown_Click" MouseEnter="DriveModeButton_MouseEnter" MouseLeave="DriveModeButton_MouseLeave" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    </Canvas>

                    <!-- Metering Mode Button -->
                    <Canvas x:Name="MeterModeCanvas" Grid.Row="6" Grid.Column="3">
                        <TextBox x:Name="MeterModeButton" Height="25" Width="85" VerticalAlignment="Center"  HorizontalAlignment="Center"
                           Background="{DynamicResource LightSteelBlueGradientLight}" BorderBrush="SlateGray"  BorderThickness="0.5" />
                        <GroupItem Name="MeterModeArrow" Width="80" Height="30" />
                        <Label x:Name="MeterModeLabel" Height="25" Width="45" Margin="4,0,0,0"
                            Content="Meter:" HorizontalAlignment="Left" FontFamily="Verdana" FontSize="11" FontStretch="Condensed" />
                        <Image x:Name="MeterModeIcon"  Source="{Binding Path=MModeIcon, UpdateSourceTrigger=PropertyChanged, FallbackValue={StaticResource ResourceKey=dummyIcon}}"
                            Height="16" Width="20" Canvas.Left="50" Canvas.Top="5" MouseEnter="DriveModeButton_MouseEnter" />
                        <Rectangle Canvas.Left="0" Width="85" Height="14" Fill="Transparent"
                            MouseLeftButtonUp="MeterModeUp_Click" MouseEnter="MeterModeButton_MouseEnter" MouseLeave="MeterModeButton_MouseLeave"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="14"  Width="85" Height="14" Fill="Transparent" 
                            MouseLeftButtonUp="MeterModeDown_Click" MouseEnter="MeterModeButton_MouseEnter" MouseLeave="MeterModeButton_MouseLeave" />
                    </Canvas>

                    <!-- DSLR AF Mode Button -->
                    <Canvas x:Name="DSLR_AFMCanvas" Grid.Row="7" Grid.Column="1" Visibility="Hidden">
                        <TextBox x:Name="DSLR_AFMButton" Height="25" Width="85" VerticalAlignment="Center"  HorizontalAlignment="Center"
                            Background="{DynamicResource LightSteelBlueGradientLight}" BorderBrush="SlateGray"  BorderThickness="0.5" />
                        <GroupItem x:Name="DSLR_AFMArrow" Width="80" Height="30" Canvas.Left="-8" />
                        <Label x:Name="DSLR_AFMLabel" Height="25" Width="30" Margin="4,0,0,0"
                            Content="AF:" HorizontalAlignment="Left" FontFamily="Verdana" FontSize="12" FontStretch="Condensed" />
                        <Label x:Name="DSLR_AFMStr" Content="{Binding Path=AFModeStr, UpdateSourceTrigger=PropertyChanged }" Height="25" Width="60"  Canvas.Left="25" 
                            HorizontalAlignment="Right" FontFamily="Verdana" FontSize="11"  FontStretch="ExtraCondensed" FontWeight="Normal" Margin="2,1,0,0" />
                        <Rectangle Canvas.Left="0" Canvas.Top="0"  Width="85" Height="14" Fill="Transparent"
                            MouseLeftButtonUp="DSLR_AFMUp_Click" MouseEnter="DSLR_AFMButton_MouseEnter" MouseLeave="DSLR_AFMButton_MouseLeave"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="14"  Width="85" Height="14" Fill="Transparent" 
                            MouseLeftButtonUp="DSLR_AFMDown_Click" MouseEnter="DSLR_AFMButton_MouseEnter" MouseLeave="DSLR_AFMButton_MouseLeave" />
                    </Canvas>

                    <!-- Live View Autofocus Mode Button -->
                    <Canvas  x:Name="DSLR_LvAFModeCanvas" Grid.Row="7" Grid.Column="3" Visibility="Hidden" >
                        <TextBox x:Name="DSLR_LvAFModeButtonHG" Visibility="Visible"
                                Height="25" Width="85" VerticalAlignment="Top"  HorizontalAlignment="Left" 
                             Background="{DynamicResource LightSteelBlueGradientLight}" BorderBrush="SlateGray"  BorderThickness="0.5" Grid.ColumnSpan="2" />
                        <GroupItem x:Name="DSLR_LvAFModeArrow"  Width="85" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="-8" />
                        <Label x:Name="DSLR_LvAFLabel" Height="25" Width="45" Background="Transparent" Canvas.Left="0" Canvas.Top="0" 
                                Content="LvAF:" FontFamily="Verdana" FontSize="12" FontWeight="Normal" FontStretch="Condensed" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <Label x:Name="DSLR_LvAFStr" Content="{Binding Path=EVF_AutoFocusModeStr, UpdateSourceTrigger=PropertyChanged }" Height="25" Width="50"  Canvas.Left="35" Canvas.Top="0"
                                HorizontalAlignment="Left" FontFamily="Verdana" FontSize="11"  FontStretch="ExtraCondensed" FontWeight="Normal" Margin="2,1,0,0"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="0"  Width="86" Height="13" Fill="Transparent"
                                MouseLeftButtonUp="LvAFUp_Click" MouseEnter="LvAFButton_MouseEnter" MouseLeave="LvAFButton_MouseLeave"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="13"  Width="86" Height="14" Fill="Transparent" 
                                MouseLeftButtonUp="LvAFDown_Click" MouseEnter="LvAFButton_MouseEnter" MouseLeave="LvAFButton_MouseLeave" />
                    </Canvas>

                    <!-- DSLM AF Mode Button -->
                    <Canvas x:Name="DSLM_AFMCanvas" Grid.Row="7" Grid.Column="1" Visibility="Hidden">
                        <TextBox x:Name="DSLM_AFMButton" Height="25" Width="85" VerticalAlignment="Center"  HorizontalAlignment="Center"
                            Background="{DynamicResource LightSteelBlueGradientLight}" BorderBrush="SlateGray"  BorderThickness="0.5"  />
                        <GroupItem x:Name="DSLM_AFMArrow" Width="80" Height="30" Canvas.Left="-8" />
                        <Label x:Name="DSLM_AFMLabel" Height="25" Width="30" Margin="4,0,0,0" Visibility="Visible" 
                            Content="AF:" HorizontalAlignment="Left" FontFamily="Verdana" FontSize="12" FontStretch="Condensed"   />
                        <Image x:Name="DSLM_AFMIcon" Source="{Binding Path=AFModeIcon, UpdateSourceTrigger=PropertyChanged, FallbackValue={StaticResource ResourceKey=dummyIcon}}"
                            Height="18" Width="40" Canvas.Left="40" Canvas.Top="3" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" />
                        <Rectangle Canvas.Left="0" Canvas.Top="-2"  Width="85" Height="14" Fill="Transparent"
                            MouseLeftButtonUp="DSLM_AFMUp_Click" MouseEnter="DSLM_AFMButton_MouseEnter" MouseLeave="DSLM_AFMButton_MouseLeave" HorizontalAlignment="Center" VerticalAlignment="Top"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="14"  Width="85" Height="14" Fill="Transparent" 
                            MouseLeftButtonUp="DSLM_AFMDown_Click" MouseEnter="DSLM_AFMButton_MouseEnter" MouseLeave="DSLM_AFMButton_MouseLeave" />
                    </Canvas>

                    <!-- DSLM Focus stacking button -->
                    <Canvas  x:Name="DSLM_FStackingCanvas" Grid.Row="7" Grid.Column="3" Visibility="Hidden" >
                        <TextBox x:Name="DSLM_FStackingButtonHG" 
                             Height="25" Width="85" VerticalAlignment="Top"  HorizontalAlignment="Left" 
                             Background="{DynamicResource LightSteelBlueGradientLight}" BorderBrush="SlateGray"  BorderThickness="0.5" Grid.ColumnSpan="2"  />
                        <Label x:Name="DSLM_FStackingLabel" Height="25" Width="64" Background="Transparent" Canvas.Left="0" Canvas.Top="0" 
                            Content="Stacking" FontFamily="Verdana" FontSize="12" FontWeight="Normal" FontStretch="Condensed" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        <Label x:Name="DSLM_FStackingIcon" Grid.RowSpan="2" Height="40" Width="25"
                            Content="" FontFamily="Wingdings" FontSize="18"  FontStretch="Condensed"  FontWeight="Bold"  
                            HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="60" Canvas.Top="-4" />

                        <Label x:Name="DSLM_StackingButton" BorderBrush="SlateGray" Height="25" Width="85"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-2,-2,0,0" 
                           MouseEnter="StackingButton_MouseEnter" MouseLeave="StackingButton_MouseLeave" MouseLeftButtonUp="FocusStackingButton_Click"/>
                    </Canvas>

                    <!-- Bulb Mode Timer Control -->
                    <Canvas x:Name="Bulb_TimerCanvas" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden" 
                            MouseEnter="Bulb_Timer_MouseEnter" MouseLeave="Bulb_Timer_MouseLeave">
                        <GroupItem x:Name="Bulb_Timer" Grid.ColumnSpan="3" Height="28" Width="185" VerticalAlignment="Center"  HorizontalAlignment="Center"  
                                Template="{StaticResource ResourceKey=StandardButtonTemplate1}"  BorderBrush="SlateGray"  BorderThickness="0.5" Visibility="Hidden" 
                        MouseEnter="Bulb_Timer_MouseEnter" MouseLeave="Bulb_Timer_MouseLeave"  />
                        <TextBlock Name="BT_h" Text="h" Canvas.Left="70" Canvas.Top="9"
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed" />
                        <TextBlock Name="BT_min"  Text="min"  Canvas.Left="105" Canvas.Top="9" 
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed" />
                        <TextBlock Name="BT_sec" Text="sec" Canvas.Left="155" Canvas.Top="9" 
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed" />
                        <TextBlock Name="BT_h_Str" Text="{Binding Path=BTHoursStr, UpdateSourceTrigger=PropertyChanged, TargetNullValue='00'}" 
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed"
                            Canvas.Left="46" Canvas.Top="9" Canvas.ZIndex="01" />
                        <TextBlock Name="BT_min_Str" Text="{Binding Path=BTMinutesStr, UpdateSourceTrigger=PropertyChanged, TargetNullValue='00'}" 
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed"
                            Canvas.Left="84" Canvas.Top="9" Canvas.ZIndex="01" />
                        <TextBlock Name="BT_sec_Str" Text="{Binding Path=BTSecondsStr, UpdateSourceTrigger=PropertyChanged, TargetNullValue='00'}" 
                            FontFamily="Verdana" FontWeight="Normal"  FontSize="12"  FontStretch="ExtraCondensed"
                            Canvas.Left="134" Canvas.Top="9"  />

                        <Image x:Name="BubTimerImage" Source="{Binding Path=BulbTimerIcon, UpdateSourceTrigger=PropertyChanged, FallbackValue={StaticResource ResourceKey=BulbTimerIcon}}"
                                Canvas.Left="16" Canvas.Top="03" Height="26" />

                        <Rectangle Canvas.Left="0" Canvas.Top="3"  
                            Width="80" Height="15" Fill="Transparent"  Canvas.ZIndex="02"
                            MouseLeftButtonUp="BTHoursUp_Click" MouseEnter="BTHours_MouseEnter" MouseLeave="BTHours_MouseLeave"  />
                        <Rectangle Canvas.Left="0" Canvas.Top="18"  
                            Width="80" Height="13" Fill="Transparent"  Canvas.ZIndex="02"
                            MouseLeftButtonUp="BTHoursDown_Click" MouseEnter="BTHours_MouseEnter" MouseLeave="BTHours_MouseLeave" />
                        <Rectangle Canvas.Left="80" Canvas.Top="3"  
                            Width="50" Height="15" Fill="Transparent" Canvas.ZIndex="02"
                            MouseLeftButtonUp="BTMinutesUp_Click" MouseEnter="BTMinutes_MouseEnter" MouseLeave="BTMinutes_MouseLeave"  />
                        <Rectangle Canvas.Left="80" Canvas.Top="18"  
                            Width="50" Height="13" Fill="Transparent" Canvas.ZIndex="02"
                            MouseLeftButtonUp="BTMinutesDown_Click" MouseEnter="BTMinutes_MouseEnter" MouseLeave="BTMinutes_MouseLeave" />
                        <Rectangle Canvas.Left="130" Canvas.Top="3"  
                            Width="60" Height="15" Fill="Transparent" Canvas.ZIndex="02"
                            MouseLeftButtonUp="BTSecondsUp_Click" MouseEnter="BTSeconds_MouseEnter" MouseLeave="BTSeconds_MouseLeave"  />
                        <Rectangle Canvas.Left="130" Canvas.Top="18"  
                            Width="60" Height="13" Fill="Transparent" Canvas.ZIndex="02"  
                            MouseLeftButtonUp="BTSecondsDown_Click" MouseEnter="BTSeconds_MouseEnter" MouseLeave="BTSeconds_MouseLeave" />
                    </Canvas>

                    <!-- Exposure Value Compensation Control-->
                    <Canvas x:Name="EVCCanvas" Grid.Row="09" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                            MouseLeave="EVCButton_MouseLeave" >
                        <GroupItem x:Name="EVCGroupHG"  Grid.ColumnSpan="3" Grid.RowSpan="3" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Top"  Width="185" Height="28" 
                            Template="{StaticResource ResourceKey=EVCButtonTemplate}" 
                            MouseEnter="EVCButton_MouseEnter" MouseLeave="EVCButton_MouseLeave" />
                        <StackPanel Orientation="Horizontal" Canvas.Left="08 ">
                            <TextBlock  Text="         3 . .-2 . .-1 . . 0 . . 1 . . 2 . . 3"  
                            Canvas.Left="08" Canvas.Top="3"  Canvas.ZIndex="01"
                            FontFamily="Courier" FontWeight="Normal" FontSize="10" FontStretch="ExtraCondensed" Height="20" 
                            MouseEnter="EVCButton_MouseEnter"  />
                            <TextBlock ></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Canvas.Left="08 " Canvas.Top="11"  MouseEnter="EVCButton_MouseEnter" >
                            <TextBlock x:Name="EvcPreMarker"  Opacity="0"
                                FontFamily="Courier" FontWeight="Normal" FontSize="10" FontStretch="ExtraCondensed" Height="20" />
                            <TextBlock x:Name="EvcMarker"  Text="|" HorizontalAlignment="Left" VerticalAlignment="Top"  
                                FontFamily="Symbol" FontWeight="ExtraBold"  FontSize="10" FontStretch="ExtraCondensed" Height="15" Foreground="Red"  />
                        </StackPanel>

                        <Polygon Name="EVCLeft"    Points="0,5 10,0 10,10 0,5 " Canvas.Left="65" Canvas.Top="25"
                            Stroke="Black" Fill="Black" Visibility="Hidden" MouseEnter="EVCButton_MouseEnter" />
                        <Polygon Name="EVCRight"   Points="0,0 10,5 0,10 0,0"   Canvas.Left="107" Canvas.Top="25"
                            Stroke="Black" Fill="Black" Visibility="Hidden" MouseEnter="EVCButton_MouseEnter" />

                        <Image Name="EVPlusMinusIcon" Source="../Resources/EV_AEBIcons/PlusMinus_Icon.png"  Height="13" Width="20"
                            Canvas.Left="81" Canvas.Top="24"  Visibility="Hidden" MouseEnter="EVCButton_MouseEnter"/>

                        <Rectangle x:Name="EVCLeftRect" Canvas.Left="05" Canvas.Top="20"  
                            Width="75" Height="20" Fill="Transparent" Canvas.ZIndex="02" Visibility="Visible" 
                            MouseLeftButtonDown="EVCLeft_Click" MouseEnter="EVCButton_MouseEnter" />

                        <Rectangle x:Name="EVCRightRect" Canvas.Left="105" Canvas.Top="20"  
                            Width="70" Height="20" Fill="Transparent"  Canvas.ZIndex="02" Visibility="Visible" 
                            MouseLeftButtonDown="EVCRight_Click" MouseEnter="EVCButton_MouseEnter" />
                    </Canvas>

                    <!-- Select Picture Path GroupBox -->
                    <GroupBox   Name="PicturePathGroupBox" Header="Define Picture Path" BorderBrush="SlateGray"  BorderThickness="1" 
                        Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" FontSize="10">
                        <GroupBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0.00" Color="LightSteelBlue" />
                                <GradientStop Offset="0.10" Color="White" />
                                <GradientStop Offset="0.90" Color="White" />
                                <GradientStop Offset="1.00" Color="LightSteelBlue" />
                            </LinearGradientBrush>
                        </GroupBox.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="storePicturesOnCameraRadioButton" Content="Store Pictures on Camera"  
                                    Grid.Row="0" Margin="10,5,0,0" Grid.ColumnSpan="2" IsEnabled="True"   IsChecked="True" FontSize="11" 
                                    VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Checked="SaveTo_RdButton_Checked" Height="15" />
                            <RadioButton x:Name="storePicturesOnHostRadioButton" Content="Store Pictures on Host" 
                                    Grid.Row="1" Margin="10,0,0,0"  Grid.ColumnSpan="2" IsEnabled="True"  IsChecked="False" FontSize="11" 
                                    VerticalAlignment="Top"  HorizontalAlignment="Left" 
                                    Checked="SaveTo_RdButton_Checked"  />
                            <TextBox     x:Name="pathOnHostTextBox" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                    Text =" " />
                            <Button      x:Name="browseOnHostButton" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                    Content="..." FontSize="14" Background="{StaticResource LightSteelBlueGradientLight}"
                                    IsEnabled="True" Click="BrowseOnHostButton_Click" />
                        </Grid>
                    </GroupBox>

                    <!-- Battery Status and available Shots -->
                    <Canvas Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- Battery Status -->
                        <TextBlock x:Name="fillStatus"  Canvas.Left="20" Canvas.Top="13"   
                            Text=" " Foreground="DarkBlue" FontFamily="Verdana" FontWeight="Normal" FontSize="10" FontStretch="Condensed"/>
                        <Image x:Name="BatteryLevelImage" Source="{Binding Path=BatteryIcon, UpdateSourceTrigger=PropertyChanged, FallbackValue={StaticResource ResourceKey=BatteryDefaultIcon}}" 
                            Canvas.Left="50" Canvas.Top="10" Height="21" Width="30"/>
                        <!-- availabele Shots -->
                        <StackPanel x:Name="avShotsStackpanel" Orientation="Horizontal" Canvas.Left="120" Canvas.Top="10">
                            <TextBlock Text="[" Foreground="Black" FontFamily="Verdana" FontWeight="ExtraBold" FontSize="14" FontStretch="Condensed"/>
                            <TextBlock x:Name="AvShots" Text="  " Foreground="DarkBlue" FontFamily="Verdana" FontWeight="Normal" FontSize="14" FontStretch="Condensed"/>
                            <TextBlock Text="]" Foreground="Black" FontFamily="Verdana" FontWeight="DemiBold" FontSize="14" FontStretch="Condensed"/>
                        </StackPanel>
                    </Canvas>

                    <!--Exit-Button-->
                    <Canvas Grid.Row="15" Grid.Column="01"  >
                        <TextBox x:Name="ExitButtonHG" Height="25" Width="85" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="0,5,0,0"
                           Background="{DynamicResource LightSteelBlueGradientLight}"  BorderBrush="SlateGray"  BorderThickness="0.5" />
                        <Label x:Name="ExitButtonLabel1" Height="25"  Width="80" Margin="4,4,0,0" FontWeight="Normal" 
                           Content="Exit: " HorizontalAlignment="Left" FontFamily="Verdana"  FontSize="12" FontStretch="Condensed" />
                        <Label x:Name="ExitButtonLabel2" Height="28"  Width="80" Margin="6,2,0,0" FontWeight="Normal" 
                           Content="  "     HorizontalAlignment="Left" FontFamily="Wingdings"  FontSize="20" FontStretch="Condensed" Foreground="MediumVioletRed"/>
                        <Label BorderBrush="SlateGray" Height="25" Width="85"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" 
                           MouseEnter="ExitButton_MouseEnter" MouseLeave="ExitButton_MouseLeave" MouseLeftButtonUp="HandleWindowClosed"/>
                    </Canvas>

                    <!-- Restart-Button -->
                    <Canvas Grid.Row="15" Grid.Column="03" >
                        <TextBox x:Name="RestartButtonHG" Height="25" Width="85" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="0,5,0,0"
                           Background="{DynamicResource LightSteelBlueGradientLight}"  BorderBrush="SlateGray"  BorderThickness="0.5" />
                        <Label x:Name="RestartButtonLabel1" Height="25"  Width="80" Margin="0,4,0,0" FontWeight="Normal" 
                           Content="Restart: " HorizontalAlignment="Left" FontFamily="Verdana"  FontSize="12" FontStretch="Condensed" />
                        <Label x:Name="RestartButtonLabel2" Height="28"  Width="80" Margin="7,2,0,0" FontWeight="Normal" 
                           Content="  "     HorizontalAlignment="Left" FontFamily="Wingdings"  FontSize="20" FontStretch="Condensed" Foreground="MediumVioletRed"/>
                        <Label BorderBrush="SlateGray" Height="25" Width="85"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" 
                           MouseEnter="RestartButton_MouseEnter" MouseLeave="RestartButton_MouseLeave" MouseLeftButtonUp="RestartButton_Click"/>
                    </Canvas>

                </Grid>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
